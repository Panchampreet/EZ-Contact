.row
  .col-md-2
  .col-md-8
    .panel.panel-default
      .panel-body
        .row
          .col-md-12
            h3(style="margin-bottom: 25px; text-align: left;") Contact Details
            hr
            .row
              .col-md-3.text-center
                img.img-circle.avatar.avatar-original(style="-webkit-user-select:none; display:block width:120px; height:120px; margin:auto;", src="{{user.imageurl}}")
              .col-md-9
                .form-group
                  .col-md-2
                    label Id: 
                  .col-md-10
                    input.form-control(type="text", ng-model='user.id')
                .form-group
                  .col-sm-2
                    label Email:
                  .col-md-10
                    input.form-control(type="text", ng-model='user.email')
                .form-group
                  .col-md-2
                    label Name: 
                  .col-md-10
                    input.form-control(type="text", ng-model='user.name')
                .form-group
                  .col-md-2
                    label Title:
                  .col-md-10
                    input.form-control(type="text", ng-model='user.title')
                .form-group
                  .col-md-2
                    label Team: 
                  .col-md-10
                    input.form-control(type="text", ng-model='user.team')
                .form-group
                  .col-md-2
                    label Organization: 
                  .col-md-10
                    input.form-control(type="text", ng-model='user.organization')
                .form-group
                  .col-md-2
                    label Role: 
                  .col-md-10
                    input.form-control(type="text", ng-model='user.role')
                .form-group
                  .col-md-2
                    label ImageURL: 
                  .col-md-10
                    input.form-control(type="text", ng-model='user.imageurl')
            hr
            .row
              .col-sm-10
                input.form-control(placeholder="Search for a Contact", type="text", ng-model='searchtext')
              .col-sm-2
                button.btn.btn-primary.pull-right(type="button", ng-click='search()') Search
            hr
            .row
              .col-sm-4
                button.btn.btn-primary(ng-click='delete()') Delete
              .col-sm-4
                button.btn.btn-primary(ng-click='update()') Update
              .col-sm-4
                button.btn.btn-primary(ng-click='create()') Create
  .col-md-2